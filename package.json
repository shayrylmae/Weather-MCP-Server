{
  "name": "weather-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for weather information using OpenMeteo API",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:sse": "tsx src/sse-server.ts",
    "start": "node dist/index.js",
    "start:sse": "node dist/sse-server.js",
    "start:production": "node dist/sse-server.js",
    "proxy": "npm run build && node http-proxy.js",
    "vercel-build": "npm run build",
    "test": "node test-integration.js",
    "test:inspector": "npx @modelcontextprotocol/inspector npm run dev",
    "test:manual": "node manual-test.js"
  },
  "keywords": ["mcp", "weather", "openmeteo", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
